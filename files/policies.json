{
    "_comment": "https://mozilla.github.io/policy-templates/",
    "policies": {
        "AppAutoUpdate": false,
        "AppUpdateURL": "https://localhost",
        "OverrideFirstRunPage": "",
        "OverridePostUpdatePage": "",
        "DontCheckDefaultBrowser": true,
        "DisableSystemAddonUpdate": true,
        "DisableProfileImport": false,
        "DisableFirefoxStudies": true,
        "DisableTelemetry": true,
        "DisableFeedbackCommands": true,
        "DisablePocket": true,
        "DisableSetDesktopBackground": false,
        "DisableDeveloperTools": false,
        "DisplayBookmarksToolbar": true,
        "ManualAppUpdateOnly": true,
        "NoDefaultBookmarks": true,
        "NetworkPrediction": false,
        "SearchSuggestEnabled": false,
        "DNSOverHTTPS": {
            "Enabled":  true,
            "Locked": false
        },
        "_comment": "Fist install extensions here, then set private_browsing in ExtensionSettings so that the user can remove them later if desired.",
        "Extensions": {
            "Install": [
                "https://addons.mozilla.org/firefox/downloads/latest/ublock-origin/latest.xpi",
                "https://addons.mozilla.org/firefox/downloads/latest/skip-redirect/latest.xpi",
                "https://addons.mozilla.org/firefox/downloads/latest/keepassxc-browser/latest.xpi"
            ],
            "Uninstall": [
                "google@search.mozilla.org",
                "bing@search.mozilla.org",
                "amazondotcom@search.mozilla.org",
                "ebay@search.mozilla.org",
                "twitter@search.mozilla.org"
            ]
        },
        "_comment": "https://mozilla.github.io/policy-templates/#extensionsettings",
        "ExtensionSettings": {
            "uBlock0@raymondhill.net": {
                "installation_mode": "allowed",
                "private_browsing": true
            },
            "skipredirect@sblask": {
                "installation_mode": "allowed",
                "private_browsing": true
            },
            "keepassxc-browser@keepassxc.org": {
                "installation_mode": "allowed",
                "private_browsing": true
            }
        },
        "FirefoxHome": {
            "Search": true,
            "Topsites": false,
            "SponsoredTopSites": false,
            "Highlights": false,
            "Pocket": false,
            "SponsoredPocket": false,
            "Snippets": false,
            "Locked": false
        },
        "FirefoxSuggest": {
            "SponsoredSuggestions": false,
            "Locked": false
        },
        "Homepage": {
            "URL": "https://solydxk.com/",
            "Locked": false,
            "StartPage": "homepage"
        },
        "HttpsOnlyMode": "enabled",
        "PopupBlocking": {
            "Default": true,
            "Locked": false
        },
        "SearchEngines": {
            "_comment": "https://european-alternatives.eu/category/search-engines",
            "PreventInstalls": false,
            "Remove": [
                "Google",
                "Bing",
                "Yahoo!",
                "Amazon.com",
                "eBay",
                "Twitter"
            ],
            "Add": [
                {
                    "Name": "Ecosia",
                    "URLTemplate": "https://www.ecosia.org/search?q={searchTerms}",
                    "Method": "GET",
                    "IconURL": "https://www.ecosia.org/favicon.ico",
                    "Alias": "@ecosia",
                    "Description": "The greenest search engine on the planet",
                    "SuggestURLTemplate": "https://ac.ecosia.org/autocomplete?q={searchTerms}&type=list"
                },
                {
                    "Name": "Qwant",
                    "URLTemplate": "https://www.qwant.com/?q={searchTerms}",
                    "Method": "GET",
                    "IconURL": "https://www.qwant.com/favicon.ico",
                    "Alias": "@qwant",
                    "Description": "The search engine that values you as a user, not as a product",
                    "SuggestURLTemplate": "https://api.qwant.com/api/suggest/?q={searchTerms}"
                },
                {
                    "Name": "Startpage",
                    "URLTemplate": "https://www.startpage.com/sp/search?query={searchTerms}",
                    "Method": "GET",
                    "IconURL": "https://www.startpage.com/favicon.ico",
                    "Alias": "@startpage",
                    "Description": "Startpage Search",
                    "SuggestURLTemplate": "https://www.startpage.com/osuggestions?q={searchTerms}"
                },
                {
                    "Name": "Swisscows",
                    "URLTemplate": "https://swisscows.com/web?query={searchTerms}",
                    "Method": "GET",
                    "IconURL": "https://swisscows.com/favicon.ico",
                    "Alias": "@swisscows",
                    "Description": "Anonymous search engine",
                    "SuggestURLTemplate": ""
                }
            ],
            "Default": "DuckDuckGo"
        },
        "SanitizeOnShutdown": {
            "Cache": true,
            "Cookies": true,
            "History": false,
            "Sessions": true,
            "SiteSettings": false,
            "Locked": false
        },
        "SupportMenu": {
            "Title": "SolydXK Support",
            "URL": "https://forums.solydxk.com",
            "AccessKey": "S"
        },
        "UserMessaging": {
            "ExtensionRecommendations": false,
            "FeatureRecommendations": false,
            "UrlbarInterventions": false,
            "SkipOnboarding": false,
            "MoreFromMozilla": false,
            "FirefoxLabs": false,
            "Locked": false
        }
    }
}
