{
    "_comment": "https://github.com/mozilla/policy-templates/blob/master/linux/policies.json",
    "policies": {
        "AppAutoUpdate": false,
        "AppUpdateURL": "https://localhost",
        "OverrideFirstRunPage": "",
        "OverridePostUpdatePage": "",
        "DontCheckDefaultBrowser": true,
        "DisableSystemAddonUpdate": true,
        "DisableProfileImport": false,
        "DisableFirefoxStudies": true,
        "DisableTelemetry": true,
        "DisableFeedbackCommands": true,
        "DisablePocket": true,
        "DisableSetDesktopBackground": false,
        "DisableDeveloperTools": false,
        "NoDefaultBookmarks": true,
        "NetworkPrediction": false,
        "SearchSuggestEnabled": false,
        "DNSOverHTTPS": {
            "Enabled":  true,
            "Locked": false
        },
        "Bookmarks": [
            {
                "Title": "SolydXK Community",
                "URL": "https://solydxk.com",
                "Favicon": "https://solydxk.com/favicons/favicon.ico",
                "Placement": "toolbar",
                "Folder": "SolydXK"
            },
            {
                "Title": "SolydXK Community Forums",
                "URL": "https://forums.solydxk.com",
                "Favicon": "https://forums.solydxk.com/favicon.ico",
                "Placement": "toolbar",
                "Folder": "SolydXK"
            }
        ],
        "_comment": "Fist install extensions here, then set private_browsing in ExtensionSettings so that the user can remove them later if desired.",
        "Extensions": {
            "Install": [
                "https://addons.mozilla.org/firefox/downloads/latest/ublock-origin/latest.xpi",
                "https://addons.mozilla.org/firefox/downloads/latest/skip-redirect/latest.xpi",
                "https://addons.mozilla.org/firefox/downloads/latest/keepassxc-browser/latest.xpi"
            ],
            "Uninstall": [
                "google@search.mozilla.org",
                "bing@search.mozilla.org",
                "amazondotcom@search.mozilla.org",
                "ebay@search.mozilla.org",
                "twitter@search.mozilla.org"
            ]
        },
        "_comment": "https://mozilla.github.io/policy-templates/#extensionsettings",
        "ExtensionSettings": {
            "uBlock0@raymondhill.net": {
                "installation_mode": "allowed",
                "private_browsing": true
            },
            "skipredirect@sblask": {
                "installation_mode": "allowed",
                "private_browsing": true
            },
            "keepassxc-browser@keepassxc.org": {
                "installation_mode": "allowed",
                "private_browsing": true
            }
        },
        "FirefoxHome": {
            "Search": true,
            "Topsites": false,
            "SponsoredTopSites": false,
            "Highlights": false,
            "Pocket": false,
            "SponsoredPocket": false,
            "Snippets": false,
            "Locked": false
        },
        "FirefoxSuggest": {
            "SponsoredSuggestions": false,
            "Locked": false
        },
        "Homepage": {
            "URL": "https://solydxk.com/",
            "Locked": false,
            "StartPage": "homepage"
        },
        "HttpsOnlyMode": "enabled",
        "PopupBlocking": {
            "Default": true,
            "Locked": false
        },
        "SearchEngines": {
            "PreventInstalls": false,
            "Remove": [
                "Google",
                "Bing",
                "Yahoo!",
                "Startpage",
                "Amazon.com",
                "eBay",
                "Twitter"
            ],
            "Default": "DuckDuckGo"
        },
        "SanitizeOnShutdown": {
            "Cache": true,
            "Cookies": true,
            "History": false,
            "Sessions": true,
            "SiteSettings": false,
            "Locked": false
        },
        "SupportMenu": {
            "Title": "SolydXK Support",
            "URL": "https://forums.solydxk.com",
            "AccessKey": "S"
        },
        "UserMessaging": {
            "ExtensionRecommendations": false,
            "FeatureRecommendations": false,
            "UrlbarInterventions": false,
            "SkipOnboarding": false,
            "MoreFromMozilla": false,
            "FirefoxLabs": false,
            "Locked": false
        }
    }
}
